<div class="section" id="files">
    <div class="grid">
        <div class="column c-start-2 c-span-4">
            <h2>Deliverables</h2>
        </div>
        <div class="column c-start-6 c-span-6">
            <p class="big">Tekstje aub!</p>
        </div>
        <div class="file-cards c-start-2 c-span-10">
            {% for file in collections.file %}
            <div class="card">
                <div class="content">
                    <h4>{{ recommendation.data.name }}</h4>
                    <p>{{ recommendation.data.description }}</p>
                </div>
                <div class="button secondary">
                    <img src="{{ '/' | url }}assets/icons/arrow-down-24.svg">
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="column c-start-2 c-span-10">
            <div class="button-up">
                <a class="button primary">Download alle deliverables</a>
                <a class="button secondary">Download alles</a>
            </div>
        </div>
    </div>
</div>